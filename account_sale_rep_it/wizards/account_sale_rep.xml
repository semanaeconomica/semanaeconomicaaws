<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="view_account_sale_rep_form">
			<field name="name">account.sale.rep.form</field>
			<field name="model">account.sale.rep</field>
			<field name="arch" type="xml">
				<form string="Registro de Ventas">
						<group>
							<group>
								<field name="company_id"/>
                                <field name="exercise"/>
								<field name="date_ini"/>
								<field name="date_end"/>
							</group>
							<group>
								<field name="type_show"/>
								<field name="currency"/>
							</group>
						</group>
						<footer>
							<button string="Mostrar" name="get_report" type="object" class="oe_highlight"/>
                            or
							<button string="Cancel" class="oe_link" special="cancel"/>
						</footer>
				</form>
			</field>
		</record>

		<record id="account_sale_rep_action" model="ir.actions.act_window">
			<field name="name">Registro de Ventas</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">account.sale.rep</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>

		<menuitem action="account_sale_rep_it.account_sale_rep_action" id="menu_action_account_sale_rep" parent="account_report_menu_it.menu_account_report_it" sequence="6" groups="account_base_it.group_account_tables_user"/>
	</data>
</odoo>